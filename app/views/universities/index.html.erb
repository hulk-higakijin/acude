<div class="absolute w-screen top-20">
  <div class="max-w-3xl mx-auto flex gap-x-4">
    <%= form_with(url: universities_path, data: { controller: "prefecture", turbo_frame: "university-lists"}, class: "basis-1/3 h-full sticky top-20", method: :get) do |f| %>
      <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name,
        { include_blank: "都道府県を選択", selected: params[:prefecture_id] },
        { class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block py-1 w-full", data: { action: "input->prefecture#submit"}}
      )%>
    <% end %>


    <div class="ml-auto basis-2/3">
      <%= turbo_frame_tag "university-lists", class: "grid grid-cols-4 gap-4" do %>
        <%= render @universities %>
      <% end %>
    </div>

    

    <br>
  </div>
</div>
