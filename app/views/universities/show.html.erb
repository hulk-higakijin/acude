<% content_for(:title, "#{@university.name} | ") %>
<div class="absolute w-screen top-20 flex flex-col gap-y-6">
  <div class="flex flex-col md:flex-row gap-x-6 mx-auto container px-2 md:px-20">
    <div class="flex gap-x-6">
      <div>
        <%= embedded_svg "svg/school.svg", class: "h-20 w-20 rounded-full border border-gray-300 mx-auto my-2", style: "fill: gray;" %>
      </div>
      <div class="flex flex-col my-auto gap-y-2">
        <h1 class="text-2xl"><%= @university.name %></h1>
        <div class="flex flex-wrap md:flex-row gap-y-2">
          <%= link_to @university.url, @university.url, class: "text-xs text-gray-500 hover:underline my-auto mr-2", target: "_blank" %>
          <div class="flex">
            <%= embedded_svg "svg/location.svg", class: "h-4 w-4", style: "fill: gray;" %>
            <p class="text-xs mt-auto text-gray-500 shrink-0"><%= @university.prefecture.name %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="flex gap-x-8 mt-auto md:mb-6 mx-auto md:mr-0 md:ml-auto shrink-0">
      <span>私たちについて</span>
      <span>募集</span>
      <span>教授</span>
    </div>
  </div>
  <div>
    <%= image_tag("no-image.png", class: "w-full h-96 object-cover") %>
  </div>
  <div class="mx-auto container px-2 md:px-32">
    <h2 class="text-xl border-l-8 border-green-500 pl-4 py-2 text-gray-600">設置学部</h2>
    <div class="flex flex-wrap gap-4 ml-4 p-4">
      <% @university.faculties.each do |faculty| %>
        <p class=""><%= faculty.name %></p>
      <% end %>
    </div>
  </div>
</div>
