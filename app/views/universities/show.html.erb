<div class="absolute w-screen top-20 flex flex-col gap-y-6">
  <div class="flex gap-x-6 mx-auto w-5/12">
    <div>
      <%= embedded_svg "svg/school.svg", class: "h-20 w-20 rounded-full border border-gray-300 mx-auto my-2", style: "fill: gray;" %>
    </div>
    <div class="flex flex-col my-auto gap-y-2">
      <h1 class="text-3xl"><%= @university.name %></h1>
      <div class="flex">
        <a href="<%= @university.url %>" class="text-xs text-gray-500 hover:underline my-auto mr-2" target="_blank"><%= @university.url %></a>
        <%= embedded_svg "svg/location.svg", class: "h-4 w-4", style: "fill: gray;" %>
        <p class="text-xs mt-auto text-gray-500 shrink-0"><%= @university.prefecture.name %></p>
      </div>
    </div>
    <div class="flex gap-x-8 my-auto ml-auto shrink-0">
      <span>私たちについて</span>
      <span>募集</span>
      <span>教授</span>
    </div>
  </div>
  <div>
    <%= image_tag("no-image.png", class: "w-full h-96 object-cover") %>
  </div>
  <div class="mx-auto w-1/3 flex flex-col gap-y-6">
    <div>
      <% if @university.introduction %>
        <%= @university.introduction %>
      <% else %>
        <p class="text-gray-500">大学紹介文がありません。<br/>大学関係者は
          <a href="#大学関係者ログイン" class="text-green-500 hover:underline">こちら</a>
          をクリック
        </p>    
      <% end %>
    </div>
    <div class="flex flex-col gap-y-2">
      <h2 class="text-xl border-l-8 border-green-500 pl-4 py-2 text-gray-600">設置学部</h2>
      <div class="flex flex-wrap gap-4 ml-4">
        <% @university.faculties.each do |faculty| %>
          <p class=""><%= faculty.name %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
